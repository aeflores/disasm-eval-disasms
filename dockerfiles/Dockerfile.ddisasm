FROM pangine/disasms-base
ARG REPO="github.com/pangine/disasm-eval-disasms"
# Install disassembler required packages
USER root
WORKDIR /root/
RUN DEBIAN_FRONTEND=noninteractive apt-get install -y \
    python \
    python3-pip

# Install ddisasm
RUN pip install ddisasm==1.8.0

USER ${USER}
WORKDIR ${USER_HOME}

# Install this package
RUN go get -u ${REPO}/... && \
    go install ${REPO}/... && \
    echo "[2020-11-12]"
